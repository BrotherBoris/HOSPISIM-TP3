@model IEnumerable<HOSPISIM.Models.Prontuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroDoProntuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDeAbertura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObservacoesGerais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDoProntuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataDeAbertura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ObservacoesGerais)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Paciente.NomeCompleto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
