@model IEnumerable<HOSPISIM.Models.Exame>

@{
    ViewData["Title"] = "Index";
}

<h1>Exames</h1>

<p>
    <a class="botao-link" asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDeSolicitacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDeRealizacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resultado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Atendimento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataDeSolicitacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataDeRealizacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resultado)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Atendimento.DataEHora)
            </td>
            <td>
                <a class="botao-link" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="botao-link" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a class="botao-link delete" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
